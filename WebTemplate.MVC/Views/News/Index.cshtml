<div id="works" class="s-works target-section sector-main">
    <div class=" row home-content__buttons category-main" style="position: initial;">
        @{Html.RenderAction("MenuList", "Categories");}
    </div>

    <div class="row" style="padding: 25px 0; max-width: 1200px; text-align: center;">
        <h3 class="title">Теги:</h3>
        @{Html.RenderAction("AllTags", "News");}
    </div>

</div>


<div class="row blog-content">
    <div class="col-full">
        <div class="row narrow section-intro has-bottom-sep" style="padding-top: 50px;">
            <div class="col-full">
                <h3 style="padding-bottom: 15px">Унікальні новини</h3>
                <p class="lead">
                    Ви можете здійснювати пошук за категорією чи тегами, як саме? Оберавши зі списку категорію, яка Вас цікавить і ми знайдемо унікальні новини, які не повторюються, для Вас у межах даної категорії. Щоб здійснити пошук за тегом потрібно ввести тег у відповідне поле.
                </p>
            </div>
        </div>

        <div class="row masonry-wrap">
            <div class="masonry">
                @foreach (var item in Model)
                {
                    <div class="masonry__brick" style="padding: 6px;">
                        <div class="item-folio">

                            <div class="item-folio__thumb">
                                <a href="~/Images/portfolio/gallery/g-beetle.jpg" class="thumb-link" title="@item.Title" data-size="1050x700">
                                    <img src="~/Images/portfolio/beetle.jpg"
                                         srcset="~/Images/portfolio/beetle.jpg 1x, ~/Images/portfolio/beetle@2x.jpg 2x" alt="">
                                    <span class="shadow-overlay"></span>
                                </a>
                            </div>

                            <a class="item-folio__text action-news" href="@Url.Action("Details", "News", new {id = item.Id})" style="text-decoration: none">
                                <h3 class="item-folio__title">
                                    @item.Title
                                </h3>
                                <div class="blog-date">
                                    <a href="@Url.Action("Details", "News", new {id = item.Id})">@item.PublishDate</a>
                                </div>
                                <div class="item-folio__caption">
                                    <p>
                                        @Html.Raw(item.Summary)
                                    </p>
                                </div>

                                <div class="blog-cat">
                                    <a href="@Url.Action("Index", "News", new {tags = item.Tags})">@item.Tags</a>
                                </div>
                            </a>

                            <a href="@item.OriginalUrl" class="item-folio__project-link" title="@item.OriginalUrl">
                                <i class="im im-link"></i>
                            </a>
                        </div> 
                    </div>
                }
            </div>
        </div>






